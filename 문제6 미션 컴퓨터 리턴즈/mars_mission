import random

class DummySensor:
    log_count = 1  # ë¡œê·¸ ë²ˆí˜¸

    def __init__(self):
        self.env_values = {
            'mars_base_internal_temperature': 0,  
            'mars_base_external_temperature': 0,  
            'mars_base_internal_humidity': 0,  
            'mars_base_external_illuminance': 0,  
            'mars_base_internal_co2': 0,  
            'mars_base_internal_oxygen': 0  
        }

    def set_env(self):
        """í™˜ê²½ ê°’ì„ ëœë¤ìœ¼ë¡œ ì„¤ì •"""
        self.env_values['mars_base_internal_temperature'] = random.randint(18, 30)
        self.env_values['mars_base_external_temperature'] = random.randint(0, 21)
        self.env_values['mars_base_internal_humidity'] = random.randint(50, 60)
        self.env_values['mars_base_external_illuminance'] = random.randint(500, 715)
        self.env_values['mars_base_internal_co2'] = round(random.uniform(0.02, 0.1), 3)
        self.env_values['mars_base_internal_oxygen'] = round(random.uniform(4, 7), 2)

    def get_env(self):
        """í™˜ê²½ ê°’ì„ ë°˜í™˜í•˜ê³  ë¡œê·¸ íŒŒì¼ì— ê¸°ë¡ (TXT íŒŒì¼)"""
        log_file = 'mars_env_log.txt'
        data = self.env_values
        log_entry = f"Log Entry #{DummySensor.log_count} | ë‚´ë¶€ì˜¨ë„: {data['mars_base_internal_temperature']}Â°C | "
        log_entry += f"ì™¸ë¶€ì˜¨ë„: {data['mars_base_external_temperature']}Â°C | ë‚´ë¶€ìŠµë„: {data['mars_base_internal_humidity']}% | "
        log_entry += f"ì™¸ë¶€ê´‘ëŸ‰: {data['mars_base_external_illuminance']}W/mÂ² | COâ‚‚: {data['mars_base_internal_co2']}% | "
        log_entry += f"Oâ‚‚: {data['mars_base_internal_oxygen']}%\n"

        # íŒŒì¼ì´ ë¹„ì–´ ìˆìœ¼ë©´ í—¤ë” ì¶”ê°€
        try:
            with open(log_file, 'r', encoding='utf-8') as f:
                is_empty = f.read() == ''
        except FileNotFoundError:
            is_empty = True

        with open(log_file, 'a', encoding='utf-8') as f:
            if is_empty:
                f.write("=== í™”ì„± ê¸°ì§€ í™˜ê²½ ë¡œê·¸ ===\n")
                f.write("ë¡œê·¸ ë²ˆí˜¸ | ë‚´ë¶€ì˜¨ë„(Â°C) | ì™¸ë¶€ì˜¨ë„(Â°C) | ë‚´ë¶€ìŠµë„(%) | ì™¸ë¶€ê´‘ëŸ‰(W/mÂ²) | COâ‚‚(%) | Oâ‚‚(%)\n")
                f.write("-" * 80 + "\n")
            f.write(log_entry)

        DummySensor.log_count += 1  # ë¡œê·¸ ë²ˆí˜¸ ì¦ê°€
        return data

# ğŸŒŸ ì‹¤í–‰ ì˜ˆì‹œ
ds = DummySensor()
ds.set_env()
print(ds.get_env())
